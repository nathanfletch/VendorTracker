@using VendorTracker.Models;
@{
  Layout = "_Layout";
}

@* Model is a dictionary *@
<h2>Edit details to update this order</h2>
<form action='/vendors/@Model["vendor"].Id/orders/@Model["order"].Id' method="post">
  <input type="number" hidden id="vendorId" name="vendorId" value='@Model["vendor"].Id'>
  <div class="form-group">
    <label for="number">Number of items: </label>
    <input type="number" min="1" id="number" name="number">
  </div>
  <div class="form-group">
    <label for="description">Add any notes to describe the order: delivery, pickup, late, etc.: </label>
    <input type="text" id="description" name="description">
  </div>
  <div class="form-group">
    <label for="date">Date: </label>
    <input type="date" id="date" name="date">
  </div>
  <button type="submit" class="btn btn-primary m-3">Update</button>
</form>