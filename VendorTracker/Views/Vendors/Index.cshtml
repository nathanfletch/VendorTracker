@using VendorTracker.Models;
@{
  Layout = "_Layout";
}

<h2>Showing all vendors: </h2>

@if(Model.Count == 0)
{
  <p>You're not tracking any vendors yet.</p>
}

<ul>
  @foreach(Vendor vendor in Model)
  {
    <li><a href="/vendors/@vendor.Id">@vendor.Name</a></li>
  }
</ul>

<a class="btn btn-primary m-3" href="/vendors/new">Track a vendor</a>